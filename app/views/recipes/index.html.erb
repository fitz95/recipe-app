<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>

<div id="recipes">
  <% @recipes.each do |recipe| %>

  <div>
  <h4><%= recipe.name %></h4>
  <%= button_to "Remove", recipe_path(recipe.id), method: :delete %>
  </div>
  <div>
  <p> <%= recipe.description %></p>
  </div>

  <% end %>
</div>
<div>
<%if user_signed_in?%>
<%= link_to "New recipe", new_recipe_path %>
<%end%>
</div>


